<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">

    <ImageView
        android:layout_marginLeft="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/human"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/textView_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="TextView" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/textView_people_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="TextView" />
       <!-- <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView_people_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="TextView" />-->
    </LinearLayout>
</LinearLayout>



<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_marginTop="18dp"
    android:layout_marginLeft="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginLeft="50dp"
        android:id="@+id/imageButton_sm"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/sm"/>

    <ImageButton
        android:layout_marginLeft="50dp"
        android:id="@+id/imageButton_add"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/select"/>

    <ImageButton
        android:layout_marginLeft="50dp"
        android:id="@+id/imageButton_call"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/call" />
</LinearLayout>
    </LinearLayout>




</LinearLayout>


</LinearLayout>