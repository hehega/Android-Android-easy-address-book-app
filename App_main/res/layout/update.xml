<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<ImageButton
    android:id="@+id/update_no_button"
    android:background="@drawable/home"
    android:layout_width="40dp"
    android:layout_height="40dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
<TextView
    android:layout_marginLeft="90dp"
    android:id="@+id/hide_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="编辑联系人"
    android:textSize="25sp"/>
    </LinearLayout>
<ImageButton
    android:layout_marginLeft="70dp"
    android:id="@+id/update_yes_button"
    android:background="@drawable/yes"
    android:layout_width="40dp"
    android:layout_height="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="200dp"
        android:id="@+id/add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/human_2"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


         <!--<TextView
             android:id="@+id/test_update_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2222222222"/>-->

        <EditText
            android:layout_marginLeft="48dp"
            android:id="@+id/update_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="姓名"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:inputType="text"/>
                             </LinearLayout>
       <LinearLayout
           android:id="@+id/add_layout_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/image_phone"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:src="@drawable/tou" />
         <!--  <Spinner
               android:id="@+id/spinner_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>-->
          <!-- <TextView
               android:id="@+id/test_update_number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="111111111"/>-->
           <EditText
               android:layout_marginLeft="48dp"
               android:id="@+id/update_phoneNmbure"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:hint="电话号码"
               android:text=""
               android:textColor="@android:color/darker_gray"
               android:textSize="16sp"
               android:inputType="phone"/>
       </LinearLayout>

        <LinearLayout
            android:id="@+id/add_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </LinearLayout>



</LinearLayout>